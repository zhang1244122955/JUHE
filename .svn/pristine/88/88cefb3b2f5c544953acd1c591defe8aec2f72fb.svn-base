$(document).ready(function() {
  
	var i = 1;
	var flag = true;
	$(document).mousemove(function(e) {
		var x = 0,
			y = 0;
		x = -(e.pageX - $(window).width() / 2) / 100;
		y = -(e.pageY - $(window).height() / 2) / 100;
		$("#testspan").text(x + ", " + y);

		$("#bg1").css({
			"transform": "translate3d(" + x + "px," + y + "px,0px)"
		});
		$("#bg2").css({
			"transform": "translate3d(" + x * 2 + "px," + y * 2 + "px,0px)"
		});
		$("#bg3").css({
			"transform": "translate3d(" + x * 3 + "px," + y * 3 + "px,0px)"
		});
		$("#bg4").css({
			"transform": "translate3d(" + x * 3.5 + "px," + y * 3.5 + "px,0px)"
		});
		$("#bg5").css({
			"transform": "translate3d(" + x * 5 + "px," + y * 5 + "px,0px)"
		});

	});
	$("#space").html5_3d_animation({
		window_width: '1200',
		window_height: '710',
		window_background: '#121212',
		star_count: '100',
		star_color: '#616161',
		star_depth: '700'
	});
	window.onmousewheel = function(e) {
		//判断是否可操作
		if(flag) {
			if(e.wheelDelta > 0) {
				//当滑轮向上滚动时
				//alert("向上滚");

				if(i > 1) {
					//$("#item" + i).css("display", "none");
					$("#item" + i).fadeOut(1000);
					$("#li" + i).removeAttr("class");
					$("#li" + i).css("opacity", "0.5");

					i--;

					//$("#item" + i).css("display", "block");
					$(".current-page").text(i);
					$("#item" + i).fadeIn(1000);
					$("#li" + i).attr("class", "active");
					$("#li" + i).css("opacity", "1");
					//设置暂时不可在执行
					flag = false;

				}
			}
			if(e.wheelDelta < 0) { //当滑轮向下滚动时  
				//("向下滚");
				//console.log(e.wheelDelta)
				if(i < 5) {
					//$("#item" + i).css("display", "none");
					$("#item" + i).fadeOut(1000);
					$("#li" + i).removeAttr("class");
					$("#li" + i).css("opacity", "0.5");

					i++;

					//$("#item" + i).css("display", "block");
					$(".current-page").text(i);
					$("#item" + i).fadeIn(1000);
					$("#li" + i).attr("class", "active");
					$("#li" + i).css("opacity", "1");
					//设置暂时不可在执行
					flag = false;
				}

			}
			setTimeout(function() {
				flag = true;
			}, 1000);
		}
	}
	//调到指定页
	function fun(p) {
		$("#item" + i).fadeOut(1000);
		$("#li" + i).removeAttr("class");
		$("#li" + i).css("opacity", "0.5");
		//$("#item" + i).css("display", "none");
		i = p;
		$(".current-page").text(i);
		$("#item" + p).fadeIn(1000);
		$("#li" + p).attr("class", "active");
		$("#li" + p).css("opacity", "1");
		//$("#item" + p ).css("display", "block");

	}
	$("#li1").click(function() {
		fun(1)
	});
	$("#li2").click(function() {
		fun(2)
	});
	$("#li3").click(function() {
		fun(3)
	});
	$("#li4").click(function() {
		fun(4)
	});
	$("#li5").click(function() {
		fun(5)
	});
	
	$("#login").click(function() {
		if($("#login").html() == "登录"){
			location.href="Login.jsp";
		}
		if($("#login").html() == "个人中心"){
			location.href="car.jsp";
		}
	});
	$("#register").click(function() {
		if($("#register").html() == "注册"){
			location.href="Register.jsp";
		}
		if($("#register").html() == "退出"){
			$("#login").html("登录");
			$("#register").html("注册");
			$.ajax({
				type: "POST",
				url: "Exit",
				success: function(data) {}
			});
		}
	});
	
	
	
	var left = false;
	var right = false;
	$(function() {
		$("#search_right").mouseenter(function() {
			right = true;
			console.log("" + left + right);
			fun();

			$("#search_left").animate({
				"margin-left": "0px"
			}, 450);
		});
		$("#search_right").mouseleave(function() {
			right = false;
			console.log("" + left + right);
			setTimeout(function() {
				fun();
			}, 10);
			//$("#search_left").animate({"margin-left":"230px"},450);
		});
		$("#search_left").mouseenter(function() {
			left = true;
			console.log("" + left + right);
			fun();
			$("#search_left").animate({
				"margin-left": "0px"
			});
		});
		$("#search_left").mouseleave(function() {
			left = false;
			console.log("" + left + right);
			setTimeout(function() {
				fun();
			}, 10);
			//$("#search_left").animate({"margin-left":"230px"});
		});

		function fun() {
			//alert(left && right);
			if(left) {

			} else if(right) {

			} else {
				$("#search_left").stop(true, false);
				$("#search_left").animate({
					"margin-left": "230px"
				}, 450);
			}
		}

	})
});