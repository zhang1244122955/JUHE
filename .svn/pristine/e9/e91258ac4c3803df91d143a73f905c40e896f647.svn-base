body {
	background: #121212;
}

#content {
	width: 1200px;
	height: 710px;
	margin: 0 auto;
	overflow: hidden;
}

.item {
	position: relative;
	width: 1200px;
	height: 710px;
	margin: 0 auto;
	overflow: hidden;
	transition: all 1s ease 0s;
}

#content div#item1 {
	display: block;
}

.banner-bg {
	width: 1200px;
	height: 710px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -355px;
	margin-left: -600px;
	-webkit-transition: all 0.2s ease-out;
	transition: all 0.2s ease-out;
	background-repeat: no-repeat;
	background-size: cover;
}

#content div#item2 {
	display: none;
}

.tech-container {
	width: 1130px;
	height: 200px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -565px;
	margin-top: -100px;
}

.tech-item {
	float: left;
	width: 210px;
	margin-left: 10px;
	color: #fff;
	text-align: center;
	-webkit-transition: all 1.1s;
	transition: all 1.1s;
}

.tech-icon {
	width: 210px;
	height: 170px;
	position: relative;
	-webkit-transition: all .7s;
	transition: all .7s;
	background-repeat: no-repeat;
	background-size: cover;
}

.tech-icon1 {
	-webkit-animation: move1 6s ease-out infinite;
	animation: move1 6s ease-out infinite alternate;
}

.tech-icon2 {
	-webkit-animation: move1 6s ease-out infinite;
	animation: move2 6s ease-out infinite alternate;
}

.tech-icon3 {
	-webkit-animation: move1 6s ease-out infinite;
	animation: move1 6s ease-out infinite alternate;
}

.tech-icon4 {
	-webkit-animation: move1 6s ease-out infinite;
	animation: move2 6s ease-out infinite alternate;
}

.tech-icon5 {
	-webkit-animation: move1 6s ease-out infinite;
	animation: move1 6s ease-out infinite alternate;
}

@keyframes move1 {
	from {
		top: 0px;
	}
	to {
		top: -30px;
	}
}

@keyframes move2 {
	from {
		top: -30px;
	}
	to {
		top: 0px;
	}
}

#content div#item3 {
	display: none;
}

#content div#item4 {
	display: none;
}

#content div#item5 {
	display: none;
}

.bottom-page {
	position: absolute;
	bottom: 50px;
	left: 30px;
	color: #fff;
	font-size: 14px;
	z-index: 990;
}

.current-page {
	font-weight: bold;
}

.home-nav {
	position: absolute;
	left: 30px;
	top: 50%;
	z-index: 990;
	margin-top: -55px;
	color: #fff;
	font-size: 12px;
}

#content div h1 {
	font-size: 36px;
	color: #fff;
}

.active {
	color: white;
	font-weight: bold;
}

.home-nav ul li {
	display: list-item;
	text-align: -webkit-match-parent;
	list-style: none;
	position: relative;
	height: 22px;
	line-height: 22px;
	opacity: .5;
	cursor: pointer;
}

.tech-title span {
	font-weight: 500;
	color: #5a5a5a;
}

.user-list {
	position: absolute;
	top: 50%;
	left: 10%;
	width: 1200px;
	height: 294px;
	margin-top: -147px;
	background-repeat: no-repeat;
	background-size: cover;
}


/*4f*/

.news-container {
	width: 1200px;
	height: 286px;
	position: absolute;
	top: 40%;
	left: 50%;
	margin-top: -143px;
	margin-left: -600px;
}

.news-left {
	float: left;
	width: 480px;
	padding-left: 120px;
}

.news-type {
	position: relative;
	margin-bottom: 30px;
	color: #fff;
	opacity: .3;
	padding-left: 15px;
	font-size: 14px;
}

.news-list {
	margin-bottom: 28px;
	color: #fff;
	font-size: 12px;
}

.news-list li {
	line-height: 36px;
	margin-left: -20px;
	font-size: 14px;
}

.news-title {
	padding-left: 10px;
	display: inline-block;
	width: 400px;
	height: 36px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	color: #fff;
	vertical-align: middle;
}

.news-title a {
	color: #fff;
	text-decoration: none;
}

a:-webkit-any-link {
	cursor: pointer;
}

.header {
	position: absolute;
	z-index: 1;
	width: 1520px;
	height: 66px;
	overflow: hidden;
}

.logo {
	width: 230px;
	height: 66px;
	/*position: absolute;*/
	float: left;
}

.logo_content {
	width: 230px;
	height: 26px;
	position: absolute;
	top: 20px;
}

.option {
	width: 890px;
	height: 66px;
	/*margin-left: 230px;*/
	float: left;
}

.opt {
	color: white;
	line-height: 66px;
	text-align: center;
	width: 178px;
	height: 66px;
	display: block;
	float: left;
}

.search {
	width: 230px;
	height: 66px;
	float: left;
	overflow: hidden;
}

#search_left {
	font-size: 20px;
	border-radius: 18px;
	position: absolute;
	margin-top: 13px;
	margin-left: 230px;
	width: 230px;
	height: 40px;
	border: none;
	outline: none;
	background: #2A2A2A;
	color: #fff;
}

#search_right {
	position: absolute;
	z-index: 2;
	background-image: url(../img/search.png);
	float: right;
	margin-top: 17px;
	margin-left: 190px;
	width: 32px;
	height: 32px;
}

.header-status {
	left: 1350px;
	position: absolute;
	z-index: 2;
	background: #121212;
	width: 170px;
	height: 66px;
}

.header-btn1 {
	display: inline-block;
	padding: 0 15px;
	height: 22px;
	border: 2px solid rgba(255, 255, 255, 0.3);
	border-radius: 13px;
	text-align: center;
	color: #fff;
	font-size: 12px;
	line-height: 22px;
	-webkit-transition: all .2s;
	transition: all .2s;
}

.header-btn2 {
	display: inline-block;
	margin: 20px 6px;
	padding: 0 15px;
	height: 22px;
	border: 2px solid #00bdff;
	background: #00bdff;
	border-radius: 13px;
	color: #fff;
	font-size: 12px;
	line-height: 22px;
	-webkit-transition: all .2s;
	transition: all .2s;
}