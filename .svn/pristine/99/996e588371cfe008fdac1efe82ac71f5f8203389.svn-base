@charset "utf-8";
* {
	margin: 0;
	padding: 0;
}
body {
	background: #fff;
}
.clearfix:after {
	display: block;
	visibility: hidden;
	clear: both;
	height: 0;
	content: "";
}
.clearfix {
	zoom: 1;
}
h1 {
	text-align: center;
	font-family: 'Microsoft YaHei';
	font-size: 24px;
	color: #333;
	padding: 20px 0;
	border-bottom: 1px solid #ddd;
}
h2 {
	text-align: center;
	font-family: 'Microsoft YaHei';
	font-size: 18px;
	color: #333;
	padding: 20px 0;
}
.iframe {
	text-align: center;
}
.iframe ul li {
	width: 250px;
	height: 600px;
	padding: 20px;
	margin: 20px 10px;
	box-shadow: 0 0 3px 3px #e3e3e3;
}
/*container start*/
#container {
	width: 1500PX;
	height: auto;
}
a {
	text-decoration: none;
	color: rgb(168, 175, 185);
	cursor: pointer;
}
/*header start*/
#header {
	width: 1500PX;
	height: 65px;
	position: relative;
}
/*logo start*/
#logo {
	width: 200px;
	height: 65px;
	background-image: url(../img/logo.png);
	float: left;
}
/*logo end*/
/*search start*/
#searchbox {
	width: 762px;
	height: 65px;
	float: left;
}
#search {
	width: 220px;
	height: 40px;
	margin-top: 12px;
	margin-left: 10px;
	border-radius: 50px;
}
#search input {
	margin: 0 auto;
	width: 180px;
	height: 35px;
	border-radius: 50px;
	outline: none;
}
#search button {
	width: 42px;
	height: 42px;
	background: none;
	border: none;
	position: absolute;
	top: -2px;
	right: 0;
}
/*search end*/
/*help start*/
.help {
	width: 470px;
	height: 90px;
	float: right;
	margin-left: -20px;
}
#ul_nav {
	width: 455px;
	height: 90px;
	float: left;
	margin: 0px;
	list-style: none;
}
#ul_nav li {
	float: left;
	width: 111px;
	height: 65px;
	line-height: 65px;
	text-align: center;
	border-left: 0.5px solid rgb(242, 242, 242);
}
.nav_li_son {
	width: 111px;
	height: 50px;
	line-height: 50px;
	background: white;
	display: none;
}
.nav_li_son a{
	color: black;
}
#ul_nav li a {
	text-decoration: none;
	color: black;
}
.nav_li_son2 {
	width: 113px;
	height: 80px;
	background: #ffffff;
	vertical-align: middle;
	text-align: center;
	display: none;
}
/*help end*/
/*header end*/
/*content start*/
#content {
	width: 1500px;
	height: 666px;
	background: white;
	position: absolute;
	z-index: -1;
}
.content_nav {
	width: 200px;
	height: 666px;
	background-color: rgb(50, 54, 60);
	float: left;
	//overflow-y: auto;
}
.content_nav_1 {
	width: 250px;
	height: 70px;
	float: left;
	margin: 0 auto;
	padding-left: 40px;
}
.content_nav_1_img {
	height: 70px;
	float: left;
	margin-top: 23px;
}
.content_nav_1_font {
	height: 70px;
	line-height: 70px;
	text-align: center;
	float: left;
	color: rgb(168, 175, 185);
}
.content_nav_bottom {
	width: 250px;
	height: 526px;
	background: white;
	float: left;
}
/*左侧导航菜单    start*/
.sideMenu {
	width: 250px;
	height:596px ;
	border-top: 1px solid #696969;
	float: left;
	overflow: auto;
}
.content_nav_2 {
	width: 250px;
	height: 40px;
	float: left;
	margin: 0 auto;
	padding-left: 50px;
}
.content_nav_2_img {
	height: 40px;
	float: left;
}
.content_nav_2_font {
	height: 40px;
	line-height: 40px;
	text-align: center;
	float: left;
	color: rgb(168, 175, 185);
}
.sideMenu h3 {
	height: 50px;
	line-height: 50px;
	padding-left: 40px;
	cursor: pointer;
	
	font-size: 13px;
	color: rgb(168, 175, 185);
}
.sideMenu ul .nLi.on .sub {
	display: block;
}
.first{
	padding-top: 25px;
}
.sideMenu ul .nLi .sub {
	padding: 5px 0;
	color: #999;
	display: none;
}
.sideMenu ul .nLi .sub li {
	height: 40px;
	line-height: 40px;
	padding-left: 40px;
	list-style: disc;
}
.sideMenu ul .nLi .sub li a {
	display: block;
	width: 100%;
	height: 100%;
	
	font-size: 12px;
	color: rgb(168, 175, 185);
	text-decoration: none;
	padding: 0 35px;
	box-sizing: border-box;
}
/*左侧导航菜单    end*/
.content_right {
	width: 1300px;
	height: 666px;
	background: rgb(240, 240, 240);
	float: left;
	position: relative;
}
.content_right_content {
	width: 1100px;
	height: 545px;
	margin: auto;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
}

.content_right_content_tips{
	width: 1100px;
	height: 50px;
	line-height: 50px;
	color: black;
	font-size: 18px;
	border-bottom: 1px solid #bbb;
}
.sumprice{
	width: 1100px;
	height: 50px;	
}
.sumprice_right{
	width: 160px;
	height: 50px;
	float: right;
}
.sum{
	width: 80px;
	height: 50px;
	line-height: 50px;
	text-align: right;
	float: left;
}
.price{
	width: 80px;
	height: 50px;
	text-align: left;
	line-height: 50px;
	float: left;
}
.cart_account{
	width: 1100px;
	height: 50px;
}
.cart_button{
	width: 350px;
	height: 50px;
	float: right;
}
.cart_button span{
	color: white;
	font-size: 16px;
}
.cart_button_1{
	width: 175px;
	height: 50px;
	float: left;
	
}
.cart_button_1_bg{
	width: 140px;
	height: 50px;
	background: rgb(0, 189, 255);
	float: right;
	border-radius: 8px;
	border: 1px solid rgb(0, 189, 255);
}
.cart_button_2{
	width: 175px;
	height: 50px;
	float: left;
}
.cart_button_2_bg{
	width: 140px;
	height: 50px;
	line-height:50px;
	text-align:center;
	background: rgb(0, 189, 255);
	float: right;
	border-radius: 8px;
	border: 1px solid rgb(0, 189, 255);
}
/*content end*/
/*container end*/